<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Base" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Androntainer" parent="Theme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="imageButtonStyle">@color/transparent</item>
        <item name="cardViewStyle">@style/Widget.Material3.CardView.Outlined</item>
    </style>

    <style name="Theme.Taskbar" parent="Theme.Base">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.Androntainer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <style name="Theme.Androntainer.Fullscreen" parent="Theme.Androntainer">
        <item name="android:actionBarStyle">@style/Widget.Theme.Androntainer.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Androntainer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Androntainer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Androntainer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>